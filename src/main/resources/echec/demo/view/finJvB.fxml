<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="echec.demo.FinController"
      prefHeight="400.0" prefWidth="600.0"
      alignment="CENTER"
      stylesheets="@../style.css" spacing="5"
      style="-fx-background-color: rgb(48,46,43)">
    <Label fx:id="LabelWin1V" styleClass="textFin" text="Vous avez gagner face a J1"/>
    <HBox alignment="CENTER" spacing="5">
        <VBox spacing="5">
            <ImageView fitHeight="50" fitWidth="50">
                <image>
                    <Image fx:id="ImWin1V" url="@../img/user_profile.jpg"/>
                </image>
            </ImageView>
            <Label fx:id="NomWin1V" text="Gagnant" styleClass="textJF"/>
        </VBox>
        <ImageView fitHeight="50" fitWidth="50">
            <image>
                <Image url="@../img/logovs.png"/>
            </image>
        </ImageView>
        <VBox spacing="5">
            <ImageView fitHeight="50" fitWidth="50">
                <image>
                    <Image fx:id="ImLoss1V" url="@../img/bot.png"/>
                </image>
            </ImageView>
            <Label fx:id="NomLoss1V" text="Perdant" styleClass="textJF"/>
        </VBox>
    </HBox>
    <Button fx:id="boutonAcc" text="Retour a l'accueil" styleClass="topButton"/>
</VBox>
